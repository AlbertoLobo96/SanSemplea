<section id="formulario" class="g-bg-gray-dark-v1 g-color-white">
    <div class="g-bg-my-gradient-opacity-v1">
        <h2 class="u-divider-center g-font-weight-700 g-font-size-40 g-font-size-70--md text-uppercase g-my-0">
            Formulario de oferta
        </h2>
    </div>
</section>

<!-- Bloque formulario-->
<section class="g-bg-white g-color-black g-py-50 g-flex-centered">
    <form class="g-brd-around g-brd-gray-light-v4 g-pa-30 g-mb-30 col-9">
        <div class="form-group g-mb-20">
            <label>Nombre de la empresa:</label>
                <input id="NombreEmp" name="NombreEmp" class="form-control form-control-md rounded-0 " type="text">
            </div>
        </div>
        <div class="form-group g-mb-20">
            <label>Email:</label>
            <div class="input-group g-brd-blue--focus">
                <input id="EmailEmp" name="EmailEmp" class="form-control form-control-md rounded-0 " type="email">
            </div>
        </div>
        <div class="form-group g-mb-20">
            <label>Telefono:</label>
            <div class="input-group g-brd-blue--focus">
                <input id="TelefonoEmp" name="TelefonoEmp" class="form-control form-control-md rounded-0" type="text">
            </div>
        </div>
        <div class="form-group g-mb-20">
            <label class="g-color-black">Titulaciones:</label>
            <div class="input-group g-brd-blue--focus">
                <select id="Cursos" class="form-control form-control-md rounded-0 js-example-basic-multiple2"
                        name="Cursos[]" multiple="multiple">
                    {% for grado in ListaGrados %}
                        <option value="{{ grado.id }}">{{ grado.descripcion }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>
        <div class="form-group g-mb-20">
            <label>Tipo de Oferta:</label>
            <div class="input-group g-brd-blue--focus">
                <div class="btn-group justified-content">
                    <label class="u-check g-bg-white">
                        <input class="g-hidden-xs-up g-pos-abs g-top-0 g-left-0" name="radGroupBtn1_1" id="OfertaTrabajo" checked=""
                               type="radio"/>
                        <span class="btn btn-md btn-block u-btn-outline-lightgray g-color-white--checked g-bg-blue--checked rounded-0">Oferta Trabajo</span>
                    </label>
                    <label class="u-check g-bg-white">
                        <input class="g-hidden-xs-up g-pos-abs g-top-0 g-left-0" name="radGroupBtn1_1" id="BecaForm" type="radio"/>
                        <span class="btn btn-md btn-block u-btn-outline-lightgray g-color-white--checked g-bg-blue--checked g-brd-left-none--md rounded-0">Beca Formacion</span>
                    </label>
                    <label class="u-check g-bg-white">
                        <input class="g-hidden-xs-up g-pos-abs g-top-0 g-left-0" name="radGroupBtn1_1" id="CursoForm" type="radio"/>
                        <span class="btn btn-md btn-block u-btn-outline-lightgray g-color-white--checked g-bg-blue--checked g-brd-left-none--md rounded-0">Curso Formacion</span>
                    </label>
                    <label class="u-check g-bg-white">
                        <input class="g-hidden-xs-up g-pos-abs g-top-0 g-left-0" name="radGroupBtn1_1" id="Concurso" type="radio"/>
                        <span class="btn btn-md btn-block u-btn-outline-lightgray g-color-white--checked g-bg-blue--checked g-brd-left-none--md rounded-0">Concurso</span>
                    </label>
                    <label class="u-check g-bg-white">
                        <input class="g-hidden-xs-up g-pos-abs g-top-0 g-left-0" name="radGroupBtn1_1" id="Otros" type="radio"/>
                        <span class="btn btn-md btn-block u-btn-outline-lightgray g-color-white--checked g-bg-blue--checked g-brd-left-none--md rounded-0">Otros</span>
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group g-mb-20">
            <label>Descripci√≥n de la oferta:</label>
            <div class="input-group">
                <textarea name="DescpEmp" id="DescpEmp" class="form-control form-control-md u-textarea-expandable rounded-0"
                          rows="2"></textarea>
            </div>
        </div>
        <div class="form-group g-mb-20">
            <label>Enlaces de interes:</label>
            <div class="input-group g-brd-blue--focus">
                <input name="EnlacesEmp" id="EnlacesEmp" class="form-control form-control-md rounded-0 " type="text" placeholder="HTPP">
            </div>
        </div>
        <div class="form-group g-mb-20">
            <label>Documentos de interes:</label>
            <div class="input-group g-brd-blue--focus">
                <input name="DocEmp" id="DocEmp" class="form-control form-control-md rounded-0" placeholder="fichero" type="file">
            </div>
        </div>
        <div class="form-group g-mb-20">
            <div class="row">
                <div class="col-md-6 text-center">
                    <div class="g-recaptcha float-md-left"
                         data-sitekey="6LfztFcUAAAAACDUmehDAWqLc6vmA4HYMjL2-0bM"></div>
                </div>
                <div class="col-md-6 text-center">
                    <div class="float-md-right">
                        <a href="#modal23" data-modal-target="#modal23" data-modal-effect="flash"
                           class="btn btn-md u-btn-3d g-bg-blue g-mr-10 g-mb-15 g-color-white">
                            <i class="icon-eye g-mr-5"></i>
                            Visualizar Oferta
                        </a>
                        <a class="btn btn-md u-btn-3d g-bg-blue g-mr-10 g-mb-15 g-color-white">
                            <i class="icon-paper-plane g-mr-5"></i>
                            Enviar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <!-- FIN bloque formulario -->
</section>
